<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- Customize background to status bar -->
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <!--Customize Drawer Bar Theme-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="AppTheme_login" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- Customize background to status bar -->
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <!--Customize Drawer Bar Theme-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#fff</item>
    </style>

    <style name="TextInputLayout_login" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="boxStrokeColor">#ffffff</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>

    </style>

    <style name="TextInputLayout_forgot_sign_up" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="boxStrokeColor">#ffffff</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColor">@color/colorSkyBlue</item>
        <item name="android:textColorHint">@color/colorSkyBlue</item>
        <item name="colorControlNormal">@color/colorSkyBlue</item>
        <item name="colorControlActivated">@color/colorSkyBlueDark</item>
        <item name="colorControlHighlight">@color/colorSkyBlue</item>

    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintTextEmailForgot_Sign_Up" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorSkyBlueDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorSkyBlueDark</item>
    </style>

    <style name="BlueCheck">
        <item name="colorAccent">@color/colorSkyBlueDark</item>
    </style>

</resources>
